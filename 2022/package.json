{
  "name": "advent_of_code_2022",
  "version": "1.0.0",
  "description": "Advent of Code 2022",
  "keywords": [
    "AoC",
    "2022"
  ],
  "author": "Simon Lukas MÃ¤rtens",
  "license": "CC0",
  "scripts": {
    "test": "AOC_ROOT=. jest",
    "typescript_template": "node ./build/00/typescript_template/src/main.js",
    "format": "prettier --write '*/*/src/*.ts' '*/*/tests/*.ts' '*/*/benchmarks/*.ts' './benchmarks/*.ts'",
    "check_format": "prettier --check '*/*/src/*.ts' '*/*/tests/*.ts' '*/*/benchmarks/*.ts' './benchmarks/*.ts'",
    "benchmark": "AOC_ROOT=. node ./build/benchmarks/all_benchmarks.js"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "benny": "^3.7.1",
    "jest": "^29.3.1",
    "kleur": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-command-line-args": "^2.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "/tests/.*\\.(test|spec)?\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true
  }
}
